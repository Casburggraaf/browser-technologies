  <noscript>
    <meta http-equiv="refresh" content="5">
  </noscript>
  <link rel="stylesheet" href="style/style.css">
  <title>ScoreBoard</title>
</head>
<body>
  <main>
    <div class="home">
      <h3>Home</h3>
      <h2><%=score.home%></h2>
    </div>
    <div class="away">
      <h3>Away</h3>
      <h2><%=score.away%></h2>
    </div>
    <div class="time">
      <h3><span>00</span>:<span>00</span></h3>
